---
interface Props {
	type: string;
  terminated: boolean;
}

const { terminated, type } = Astro.props;
---
<div class="w-[400px] h-auto bg-white rounded-2xl py-[20px] px-[20px]">
  <div class="w-full grid place-items-center text-black">
    <div class={`w-[32px] h-[32px] rounded-full ${terminated ? 'bg-green-300' : 'bg-red-300'}`}></div>
    <h1 class="text-2xl uppercase font-bold ">Reparacion de {type}</h1>
  </div>
  <div class="w-full min-h-[550px]">
    <p>El estado de la pantalla esta a un 40% termninado</p>
  </div>
</div>